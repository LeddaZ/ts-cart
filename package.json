{
  "name": "ts-cart",
  "version": "1.0.0",
  "description": "Modular shopping cart API example written in TypeScript.",
  "scripts": {
    "dev": "nodemon",
    "start": "ts-node src/index.ts",
    "build": "npx tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "gendata": "ts-node ./src/utils/product-generator.ts"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "LeddaZ",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.3",
    "lodash": "^4.17.21",
    "mongoose": "^8.2.2",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/lodash": "^4.17.0",
    "@types/morgan": "^1.9.9",
    "nodemon": "^3.1.0",
    "prettier": "3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.2"
  }
}
